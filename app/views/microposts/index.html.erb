<p id="notice"><%= notice %></p>

<h1>Microposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.content %></td>
        <td><%= micropost.user_id %></td>
        <td><%= link_to 'Show', micropost %></td>
        <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
        <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Turn me on', turn_on_micropost_path(micropost) %></td>  <!--HOLY FUCKING SHIT THIS WORKS-->
        <td><%= link_to 'Turn me off', turn_off_micropost_path(micropost) %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

